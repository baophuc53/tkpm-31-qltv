                    {{/if}}
                    <div> Thể loại: <a href="/category/{{name.name}}/book">{{name.name}}</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <td>Người bán:
                                    </td>
                                    <td>{{book.Seller}}
                                    </td>
                                    <td>Score:
                                    </td>
                                    <td>{{Percentformat sellScore}}
                                    </td>
                                </tr>
                                {{#if book.PriceHolder}}
                                <tr>
                                    <td>
                                        Người ra giá:
                                    </td>
                                    <td>
                                        {{book.PriceHolder}}
                                    </td>
                                    <td>
                                        Score:
                                    </td>
                                    <td>
                                        {{Percentformat bidScore}}
                                    </td>
                                </tr>
                                {{/if}}
                                <tr>
                                    <td>
                                        Thời gian đăng:
                                    </td>
                                    <td colspan="3">
                                        {{DateTimeFormat book.StartTime}}
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Thời gian kết thúc:
                                    </td>
                                    <td colspan="3">
                                        <span id="EndTime" class="countdown pt-4">{{book.EndTime}}
