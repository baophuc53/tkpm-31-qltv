                        <form id="Borrow">
                            <div class="col-lg-6 col-12">
                                <input type="number" name="Price" value="{{book.Price}}" min="{{book.Price}}"
                                    step="{{book.StepPrice}}" readonly>
                                <input name="StepPrice" value="{{book.StepPrice}}" hidden=true>
                            </div>
                            <div class="col-12 mt-10">
                                {{#if isAuthenticated}}
