{{>header}}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p>Trang chủ/Phiếu mượn sách</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="cart_area section_padding">
    <div class="container">
        <div class="float-right mb-2">
            <a class="btn btn-outline-primary" href="/borrow/add" >
            Lập phiếu mượn
            </a>
        </div>
        <div>
            <div class="table-responsive">
                <table id="cart" class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th style="width:5%">#ID</th>
                            <th style="width:20%">Tên độc giả</th>
                            <th style="width:20%">Ngày lập phiếu</th>
                            <th style="width:50%">Tình trạng</th>
                            <th style="width:5%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each borrow}}
                        <tr >
                            <td class="align-middle">
                                {{id}}
                            </td>
                            <td class="align-middle">
                                {{fullname}}
                            </td>
                            <td class="align-middle">
                                {{DateFormatShow create_at}}
                            </td>
                            <td class="align-middle">{{status}}</td>
                            <td class="align-middle">
                                <a href="/borrow/edit/{{id}}" class="btn btn-outline-success ">
                                    <i class="fa fa-info" aria-hidden="true"></i>
                                </a>
                            <td class="align-middle">
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
{{>footer}}