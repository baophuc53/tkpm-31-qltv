{{>header}}

<!-- breadcrumb start-->
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p><a href="/">Trang chủ </a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="cat_book_area section_padding border_top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    <div class="col-12">
                        <div class="row">
                            <div class="book_top_bar d-flex justify-content-between align-items-center">
                                <div class="single_book_menu book_bar_item">
                                    <h2>Danh sách sách</h2>
                                </div>
                            </div>

                        </div>
                        <div class="row ">
                            {{#each this.book}}
                            {{>bookCard}}
                            {{/each}}
                        </div>
                    </div>

                </div>
                <div class="row justify-content-center m-2">
                    <nav aria-label="Page navigation">
                        <ul class="pagination ">
                            <li class="page-item">
                                <a class="page-link" href="?page={{prev_page}}" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                            {{#each page_numbers}}
                            {{#if isCurrentPage}}
                            <li class="page-item active"><a class="page-link"
                                    href="?page={{value}}">{{value}}</a></li>
                            {{else}}
                            <li class="page-item"><a class="page-link"
                                    href="?page={{value}}">{{value}}</a></li>
                            {{/if}}
                            {{/each}}
                            <li class="page-item">
                                <a class="page-link" href="?page={{next_page}}" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</section>
{{>footer}}