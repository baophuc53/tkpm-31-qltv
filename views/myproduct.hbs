{{#section 'js'}}
<script>
    $('a.likeBtn').each(function () {
        $(this).on('click', function () {
            var r = prompt('Mời thêm nhận xét:');
            if (r != null)
                $.get($(this).prop('href') + '&comment=' + r, (data, status) => {
                    if (data == 'Success') {
                        alert(data);
                        location.reload();
                    } else {
                        alert('Có lỗi xảy ra');
                        location.reload();
                    }
                })
            return false;
        })
    })
</script>
{{/section}}

{{>header}}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p>Trang chủ/Đấu giá của tôi</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="cart_area section_padding">
    <div class="container">
        <div class="cart_inner">
            <div class="table-responsive">

                <table id="cart" class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th style="width:40%">Sản phẩm</th>
                            <th style="width:10%">Giá hiện tại</th>
                            <th style="width:30%" class="text-center">Thời gian còn lại</th>
                            <th style="width:10%" class="text-center">Người giữ giá</th>
                            <th style="width:10%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each sachs}}
                        <tr>
                            <td data-th="Sach"><a href="/detail/{{SachID}}">
                                    <div class="row">
                                        <div class="col-2 hidden-xs"><img
                                                src="/images/sach/{{SachID}}/main.jpg" class="img-responsive" />
                                        </div>
                                        <div class="col-10">
                                            <h4 class="nomargin">{{Name}}</h4>
                                        </div>
                                    </div>
                                </a>
                            </td>
                            <td data-th="Price">{{Numberformat Price}}VND</td>

                            <td data-th="EndTime" class="text-center">{{Message}}</td>
                            <td data-th="PriceHolder" class="text-center">{{PriceHolder}}</td>
                            {{#if ratable}}
                            <td data-th="Score" class="text-center">
                                <a class="btn btn-outline-success likeBtn" href="/mysach/{{SachID}}?Action=like">
                                    <i class="far fa-thumbs-up"></i>
                                </a>
                                <a class="btn btn-outline-danger likeBtn"
                                    href="/mysach/{{SachID}}?Action=dislike">
                                    <i class="far fa-thumbs-down"></i></a>
                            </td>
                            {{/if}}
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
{{>footer}}