{{>header}}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p>Trang chủ/Danh sách độc giả</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="cart_area section_padding">
    <div class="container">
        <div class="float-right mb-2">
            <a class="btn btn-outline-primary" href="/reader/add" >
            Thêm độc giả
            </a>
        </div>
        <div>
            <div class="table-responsive">

                <table id="cart" class="table table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>#ID</th>
                            <th style="width:20%">Họ và tên</th>
                            <th style="width:10%">Ngày sinh</th>
                            <th style="width:35%">Địa chỉ</th>
                            <th style="width:15%">Email</th>
                            <th style="width:10%">Ngày lập thẻ</th>
                            <th style="width:5%"></th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each reader}}
                        <tr >
                            <td class="align-middle">
                                {{id}}
                            </td>
                            <td class="align-middle">
                                {{fullname}}
                            </td>
                            <td class="align-middle">
                                {{DateFormatShow dob}}
                            </td>

                            <td class="align-middle">{{address}}</td>
                            <td class="align-middle">{{email}}</td>
                            <td class="align-middle">
                                {{DateFormatShow create_at}}
                            </td>
                            <td class="align-middle">
                                <a href="/reader/edit/{{id}}" class="btn btn-outline-success btn-sm ">
                                    <i class="fas fa-edit" ></i>
                                </a>
                            <td class="align-middle">
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
{{>footer}}