{{#section 'js'}}
<script
    src="https://cloud.tinymce.com/5/tinymce.min.js?apiKey=ezd73nxbzc7bu6e86g2l82jbbffke0mwevwrnyvc5q8h89j6"></script>
<script>
    tinymce.init({
        selector: '#txtFullDes',
        height: 600,
        plugins: 'paste image link autolink lists table media',
        menubar: false,
        toolbar: [
            'undo redo | bold italic underline strikethrough | numlist bullist | alignleft aligncenter alignright',
            'forecolor backcolor',
            'table link image media',
        ],
    });
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/js/fileinput.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/themes/fa/theme.min.js"></script>
<script>
    $('#fuMain').fileinput({
        theme: 'fa',
        dropZoneEnabled: false,
        allowedFileExtensions: ['png', 'jpg', 'gif'],
    });
</script>
<script src="/javascripts/bootstrap-input-spinner.js"></script>
<script> $("input.Price").inputSpinner();
    $()
</script>
{{/section}}

{{#section 'css'}}
<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.0.3/css/fileinput.min.css" media="all"
    rel="stylesheet" type="text/css" />
{{/section}}

{{>header}}
<section class="breadcrumb breadcrumb_bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-12">
                <div class="breadcrumb_iner">
                    <div class="breadcrumb_iner_item">
                        <p>Trang chủ/ Đăng sản phẩm</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="checkout_area mt-5 ">
    <div class="container">
        <div class="billing_details">
            <div class="form-group ">
                <h4>Đăng sản phẩm</h4>
            </div>
             {{#if err_message}}
            <div class="alert alert-warning alert-dismissible fade show" role="alert">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                {{err_message}}
            </div>
            {{/if}}
            <form class="row contact_form" action="" method="POST" novalidate="novalidate" enctype="multipart/form-data">
                <div class="col-md-12 form-group ">
                    <label class="col-sm-2 col-form-label" for="fullname">Tên sản phẩm </label>
                    <input type="text" class="form-control" id="name" name="Name" required/>
                </div>
                <div class="col-md-4 form-group">
                    <label class="col-sm-4 col-form-label" for="price" >Giá khởi điểm</label>
                    <input type="number" class="form-control" name="Price" required/>
                </div>

                <div class="col-md-3 form-group">
                    <label class="col-sm-4 col-form-label" for="Step">Bước giá</label>
                    <input type="number" class="form-control Price" min="100000" value="100000" step="100000"
                        name="StepPrice" readonly />
                </div>
                <div class="col-md-4 form-group">
                    <label class="col-sm-4 col-form-label" for="price">Giá mua ngay</label>
                    <input type="number" class="form-control" id="PriceNow" name="InstancePrice" />
                </div>
                <div class="col-md-12 form-group">
                    <label class="col-sm-4 col-form-label" for="txtFullDes">Mô tả</label>
                    <textarea class="form-control" id="txtFullDes" name="Description"></textarea>
                </div>
                <div class="col-md-12 form-group">
                    <label class="col-sm-2  control-label" for="Theloai">Thể loại</label>
                    <div class="input-wrap pl-5">
                        <div class="row ">
                            {{#each this.theloai}}
                            <div class="col-xs-4 mr-5">
                                <label>
                                    <input type="radio" name="CatName" value="{{CatName}}" checked>
                                    <span>
                                        <i class="ico"></i>
                                    </span>
                                    {{CatName}}
                                </label>
                            </div>
                            {{/each}}
                        </div>
                    </div>
                </div>

                <div class="col-md-12 form-group">
                    <label class="col-sm-4 col-form-label" for="email">Thêm ảnh cho sản phẩm</label>
                    <div class="file-loading">
                        <input id="fuMain" name="fuMain" type="file" multiple>
                    </div>
                </div>

                <div class="col-sm-4 form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="1" name="Public">
                        <label class="form-check-label" for="defaultCheck1">
                            Public for all user
                        </label>
                    </div>
                </div>
                <div class="col-sm-4 form-group">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" value="1" name="SmartBorrow">
                        <label class="form-check-label" for="defaultCheck1">
                            Tự động gia hạn
                        </label>
                    </div>
                </div>
        </div>
        <div class="col-md-12 form-group">
            <div class="g-recaptcha" data-sitekey="your_site_key"></div>
            <br />
            <button type="submit" class="btn_3">
                Đăng sản phẩm
            </button>
        </div>
        </form>
    </div>
</section>

{{>footer}}