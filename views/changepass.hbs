{{>header}}
{{#if err}}
    <script>
        alert({{err}})
    </script>
{{/if}}


<section class="checkout_area mt-5 ">
    <div class="container d-flex justify-content-center">
        <form action="/change-pass" method="POST" class="col-6">
            <div class="row">
                <div class="container ">
                    <div class="col-12">
                        <div class="row">
                            <label class="col-form-label">Mật khẩu hiện tại</label>
                            <input type="password" class="form-control" name="password" />
                        </div>
                        <div class="row">
                            <label class="col-form-label">Mật khẩu mới</label>
                            <input type="password" class="form-control"  name="new_password" />
                        </div>
                        <div class="row">
                            <label class="col-form-label">Nhập lại mật khẩu mới</label>
                            <input type="password" class="form-control"  name="confirm_password" />
                        </div>
                            <button type="submit" class="btn btn-primary mt-2 float-right">Xác nhận</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
</section>
{{>footer}}